<Window x:Class="Task9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CustomCommands.ChangeColor}"
                        Executed="ChangeColorExecuted"/>
        <CommandBinding Command="ApplicationCommands.Undo"
                        Executed="UndoExecuted"
                        CanExecute="UndoCanExecute"/>
    </Window.CommandBindings>

    <DockPanel x:Name="Dock" Background="White">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет"
                          Command="{x:Static local:CustomCommands.ChangeColor}"/>
                <MenuItem Header="Отменить"
                          Command="ApplicationCommands.Undo"/>
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                        
                    Background="White"
                    Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Предыдущий цвет:" 
                               FontSize="12" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                        <Border x:Name="PreviousColorIndicator" 
                            Width="50" 
                            Height="30" 
                            CornerRadius="5" 
                            Background="White"
                            BorderBrush="DarkGray" 
                            BorderThickness="1"/>
                    </StackPanel>
                </Border>
            </ToolBar>
        </ToolBarTray>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Используйте кнопки, меню или горячие клавиши:" 
                       FontSize="14" 
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>
            <TextBlock Text="Ctrl+C - изменить цвет" 
                       FontSize="12" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Ctrl+Z - отменить" 
                       FontSize="12"/>
            
        </StackPanel>
    </DockPanel>

</Window>
