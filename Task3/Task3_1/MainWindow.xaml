<Window x:Class="Task3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Выбор курса" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Имя студента:" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Name="StudentNameTextBox" 
                 Margin="0,0,0,10" Height="25"/>

        <!-- Факультет -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Факультет:" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  Name="FacultyComboBox"    
                  SelectionChanged="FacultyComboBox_SelectionChanged"
                  Margin="0,0,0,10" Height="25"
                  ItemsSource="{Binding Faculty,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Форма обучения:" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" 
                    Orientation="Horizontal" Margin="0,0,0,10">
            <RadioButton Name="FullTimeRadio" Content="Очно" IsChecked="True" Margin="0,0,20,0"/>
            <RadioButton Name="PartTimeRadio" Content="Заочно"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Часов в неделю:" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="4" Grid.Column="1" 
                    Orientation="Vertical" Margin="0,0,0,10">
            <Slider Name="HoursSlider" Minimum="5" Maximum="40" 
                   Value="20" TickFrequency="5" 
                   IsSnapToTickEnabled="True" 
                   TickPlacement="BottomRight"/>
            <TextBlock Text="{Binding ElementName=HoursSlider, Path=Value, StringFormat={}{0} часов}" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Доступные курсы:" 
                   Margin="0,0,10,10" VerticalAlignment="Top"/>
        <ListBox Grid.Row="5" Grid.Column="1" 
                 Name="CoursesListBox" 
                 Height="120" Margin="0,0,0,10"
                 SelectionMode="Multiple"
                 ItemsSource="{Binding Courses,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"           
        />
        <CheckBox Grid.Row="6" Grid.ColumnSpan="2" 
                  Name="AgreementCheckBox" 
                  Content="Я согласен на обработку персональных данных" 
                  Margin="0,10,0,20"/>

        <Button Grid.Row="7" Grid.ColumnSpan="2" 
                Name="RegisterButton" 
                Content="Записаться" 
                Height="30" Width="120" 
                HorizontalAlignment="Center"
                Click="RegisterButton_Click"/>


    </Grid>
</Window>
