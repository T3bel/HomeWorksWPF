<Window x:Class="Task2_1.ProjectInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_1"
        mc:Ignorable="d"
        Title="Информация о проекте" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image Source="Data/CreatorImage.jpg" 
               Grid.Column="0"
               HorizontalAlignment="Left"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1" Text="Автор: Трошкин Дмитрий Сергеевич"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" Text="Версия 1.0.0"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="3" Text="Дата создания: 07.08.2025"/>
            <Button Grid.Row="4" Name="Back" Content="Назад" Width="100" Height="50" Margin="20" HorizontalAlignment="Center" Click="Back_Click"/>
        </Grid>
    </Grid>
</Window>
