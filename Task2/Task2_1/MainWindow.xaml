<Window x:Class="Task2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="OpenFile" Width="100" Height="50" Margin="20" Content="Открыть файл" Click="OpenFile_Click"/>
            <Button Grid.Row="1" Name="SaveFile" Width="100" Height="50" Margin="20" Content="Сохранить файл" Click="SaveFile_Click"/>
            <Button Grid.Row="2" Name="Info" Width="100" Height="50" Margin="20" Content="Информация" Click="Info_Click"/>
            <StatusBar Grid.Row="3" x:Name="StatusBar" Height="Auto" VerticalAlignment="Bottom">
                <StatusBarItem>
                    <TextBlock TextWrapping="Wrap" x:Name="StatusText" Text="{Binding Status,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                </StatusBarItem>

            </StatusBar>
        </Grid>
        <DockPanel Grid.Column="1" Background="LightGray">
            <TextBox Name="TextRedactor"
                     ScrollViewer.CanContentScroll="True"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     Text="{Binding TextBlockContent, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                     FontFamily="Arial" 
                     FontSize="14" 
                     TextWrapping="Wrap"  
                     Margin="10,0,0,0"/>
        </DockPanel>
    </Grid>
</Window>
