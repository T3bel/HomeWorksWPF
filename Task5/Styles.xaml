<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Цветовые кисти -->
    <SolidColorBrush x:Key="PrimaryColor">#2C3E50</SolidColorBrush>
    <SolidColorBrush x:Key="HoverColor">#3498DB</SolidColorBrush>
    <SolidColorBrush x:Key="DisabledColor">#95A5A6</SolidColorBrush>

    <!-- Размеры элементов -->
    <sys:Double x:Key="ControlHeight">30</sys:Double>
    <sys:Double x:Key="ControlWidth">120</sys:Double>

    <!-- Базовый стиль для кнопки -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="{StaticResource ControlHeight}"/>
        <Setter Property="Width" Value="{StaticResource ControlWidth}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Стиль для заголовка -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>
</ResourceDictionary>