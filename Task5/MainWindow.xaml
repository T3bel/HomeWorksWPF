<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">

    <Window.Resources>
        <Style x:Key="InteractiveButtonStyle" 
               TargetType="Button" 
               BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <!-- Триггер при наведении -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HoverColor}"/>
                </Trigger>

                <!-- Триггер при нажатии -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>

                <!-- Триггер для отключенного состояния -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{StaticResource DisabledColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel Margin="20">
        <!-- Заголовок -->
        <TextBlock Text="Панель управления" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center"/>

        <!-- Основные кнопки -->
        <StackPanel>
            <Button Content="Сохранить" 
                    Style="{StaticResource InteractiveButtonStyle}"/>
            <Button Content="Отменить" 
                    Style="{StaticResource InteractiveButtonStyle}"/>
        </StackPanel>

        <!-- CheckBox для переключения состояния -->
        <CheckBox x:Name="ToggleButton" 
                  Content="Активировать кнопку" 
                  Margin="0,10,0,0"/>

        <!-- Кнопка зависящая от CheckBox -->
        <Button Content="Специальная кнопка"
               IsEnabled="{Binding IsChecked, ElementName=ToggleButton}"/>
    </StackPanel>
</Window>
