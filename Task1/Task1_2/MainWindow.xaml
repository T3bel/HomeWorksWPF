<Window x:Class="Task1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Ellipse Name="Stop" Height="100" Width="100" Fill="Gray" Margin="20"/>
            <Ellipse Name="Ready" Height="100" Width="100" Fill="Gray" Margin="20"/>
            <Ellipse x:Name="Go" Height="100" Width="100" Fill="Gray" Margin="20"/>

            <Button x:Name="NextSignal" Height="50" Width="100" Content="Next!" Click="NextSignal_Click"/>
        </StackPanel>

    </Grid>
</Window>
