<Window x:Class="Task8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task8"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">

    <Window.Resources>
        <local:CategoryToBrushConverter x:Key="CategoryToBrushConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <ListBox x:Name="ProductsListBox" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--Понимаю, что задание было сделать шаблон через триггер, но мне кажется через конвертер эстетичнее. 
                    Можно сделать и через триггеры, но в целом будет точно так же как в примере, который разбирали в лекции-->
                    <Border BorderThickness="1" 
                            BorderBrush="Gray" 
                            CornerRadius="8" 
                            Margin="5"
                            Background="{Binding Category, Converter={StaticResource CategoryToBrushConverter}}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Изображение товара -->
                            <Image Grid.Column="0" 
                                   Width="50" 
                                   Height="50" 
                                   Source="{Binding ImagePath}"
                                   Margin="0,0,10,0"/>

                            <!-- Название и категория -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Category}" 
                                           FontSize="12" 
                                           Foreground="Gray"/>
                            </StackPanel>

                            <!-- Цена -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Price, StringFormat='{}{0:N0} ₽'}" FontSize="16" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="DarkGreen"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>


</Window>
