    </Window.Resources>

    <StackPanel Margin="20">
        <CheckBox Content="Unchecked" 
                  IsChecked="False"/>

        <CheckBox Content="Checked" 
                  IsChecked="True"/>

        <CheckBox Content="Indeterminate" 
                  IsChecked="{x:Null}"/>
    </StackPanel>
